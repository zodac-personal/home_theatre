NAVIDROME_MONITOR_URL="https://navidrome.site.com/ping"
PROWLARR_MONITOR_URL="https://prowlarr.site.com/ping"
QBITTORRENT_MONITOR_URL="https://qbittorrent.site.com/"
RADARR_MONITOR_URL="https://radarr.site.com/ping"
READARR_MONITOR_URL="https://readarr.site.com/ping"
ROMM_MONITOR_URL="https://romm.site.com/"
SONARR_MONITOR_URL="https://sonarr.site.com/ping"
TANDOOR_MONITOR_URL="https://tandoor.site.com/"
# RaspberryPi services
AUTHENTIK_MONITOR_URL="https://authentik.site.com/-/health/ready/"
