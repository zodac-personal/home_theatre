DOZZLE_MONITOR_URL="https://dozzle.site.com/healthcheck"
FILEBROWSER_MONITOR_URL="https://filebrowser.site.com/health"
HOMARR_MONITOR_URL="https://site.com/"
HOMEBOX_MONITOR_URL="https://homebox.site.com/"
